      <scope method-name="isWater" method-value="true" />
      <scope type="model.tile.highSeas" match-negated="true" />
      <modifier id="model.goods.pearl" index="50"
                type="additive" value="1"/>
    </tile-improvement-type>
  </tile-improvement-types>

