    <unit-types>
        <unit-type id="colonist" abstract="true"
                   offence="0" defence="1" movement="3" line-of-sight="1"
                   priority="1000">
            <ability id="model.ability.person"
                     value="true"/>
            <ability id="model.ability.foundColony"
                     value="true"/>
            <ability id="model.ability.canBeEquipped"
                     value="true"/>
            <ability id="model.ability.canBeCaptured"
                     value="true"/>
            <modifier id="model.modifier.conversionSkill"
                      type="additive" value="6"/>
            <modifier id="model.modifier.conversionAlarmRate"
                      type="percentage" value="2"/>
            <consumes id="model.goods.food" value="2" />
            <consumes id="model.goods.bells" value="1" />
        </unit-type>

        <unit-type id="model.unit.freeColonist" extends="colonist"
                   default-unit="true" score-value="3" skill="0"
                   recruit-probability="20" maximum-experience="200">
            <ability id="model.ability.bornInColony"
                     value="true"/>
            <ability id="model.ability.foundInLostCity"
                     value="true"/>
            <required-goods id="model.goods.food"
                            value="200"/>
        </unit-type>

        <unit-type id="model.unit.masterMinter"
                   extends="colonist"
                   price="2000"
                   skill="2"
                   expert-production="model.goods.silvercoin"
                   recruit-probability="1"
                   score-value="5">
            <modifier id="model.goods.silvercoin"
                      index="30"
                      type="multiplicative"
                      value="2"/>
        </unit-type>
    </unit-types>

    <building-types>

        <building-type id="model.building.mintHouse">
            <production>
                <input goods-type="model.goods.silver"
                       value="2"/>
                <output goods-type="model.goods.silvercoin"
                        value="2"/>
            </production>
            <required-goods id="model.goods.hammers" value="64" />
        </building-type>

        <building-type id="model.building.mintShop"
                       extends="model.building.mintHouse"
                       upgrades-from="model.building.mintHouse"
                       competence-factor="2"
                       upkeep="5">
            <production>
                <input goods-type="model.goods.silver"
                       value="3"/>
                <output goods-type="model.goods.silvercoin"
                        value="3"/>
            </production>
            <required-goods id="model.goods.hammers"
                            value="64"/>
            <required-goods id="model.goods.tools"
                            value="20"/>
        </building-type>

        <building-type id="model.building.mintWorks"
                       extends="model.building.mintShop"
                       upgrades-from="model.building.mintShop"
                       experts-with-connections-production="4"
                       competence-factor="3"
                       rebel-factor="1.5"
                       required-population="8"
                       upkeep="15">
            <production>
                <input goods-type="model.goods.silver"
                       value="4"/>
                <output goods-type="model.goods.silvercoin"
                        value="7"/>
            </production>
            <required-goods id="model.goods.hammers"
                            value="240"/>
            <required-goods id="model.goods.tools"
                            value="100"/>
            <required-ability id="model.ability.buildFactory"/>
            <ability id="model.ability.expertsUseConnections"
                     value="true"/>
        </building-type>

    </building-types>

    <european-nation-types>

        <european-nation-type id="model.nationType.guilds"
                              extends="model.nationType.default">
            <unit id="soldier"
                  type="model.unit.expertSilverMiner"
                  role="model.role.soldier"/>
            <unit id="pioneer"
                  type="model.unit.masterMinter"
                  role="model.role.pioneer"/>
            <unit id="scout"
                  type="model.unit.seasonedScout"
                  role="model.role.scout"/>
            <unit id="ship"
                  type="model.unit.galleon"/>
            <modifier id="model.goods.silvercoin"
                      index="80"
                      type="additive"
                      value="2"/>
        </european-nation-type>

    </european-nation-types>

    <nations>
        <nation id="model.nation.holyromanempire"
                color="0xc4a022"
                nation-type="model.nationType.guilds"
                selectable="true"
                preferred-latitude="-30"
                starts-on-east-coast="false"
                ref="model.nation.holyromanempireREF"/>
        <nation id="model.nation.holyromanempireREF"
                color="0x68228b"
                nation-type="model.nationType.ref"/>
    </nations>

