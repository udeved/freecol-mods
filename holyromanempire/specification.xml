<freecol-specification id="hre" version="0.2">

     <goods-types>
        <goods-type id="model.goods.silvercoin"
                    is-farmed="false"
                    made-from="model.goods.silver">
            <market initial-amount="500"
                    initial-price="32"
                    price-difference="3"/>
